---
import Layout from '../layouts/Layout.astro';

// You could eventually automate this, but for now, we hardcode it for the "clean" look
const systems = [
  { name: "Website & Portfolio", status: "Operational", color: "text-green-500" },
  { name: "Anfrage-System (Formspree)", status: "Operational", color: "text-green-500" },
  { name: "Telefon-Support", status: "Verfügbar", color: "text-green-500" },
  { name: "E-Mail Server", status: "Operational", color: "text-green-500" }
];

const serviceCapacity = [
  { name: "Entrümpelung", load: "Normal", availability: "Innerhalb 5-7 Werktagen" },
  { name: "Hausmeisterservice", load: "Voll", availability: "Bestandskunden bevorzugt" },
  { name: "Grünpflege", load: "Saisonal Hoch", availability: "Anfragen für Frühjahr offen" }
];
---

<Layout title="System Status">
  <section class="pt-40 pb-32 px-8 md:px-24">
    <div class="flex items-center gap-4 mb-8">
        <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
        <h1 class="text-xs font-black uppercase tracking-[0.3em]">Alle Systeme bereit</h1>
    </div>
    
    <h2 class="text-[clamp(2rem,6vw,4rem)] font-black uppercase leading-none mb-20">
        Status & <br />
        <span class="text-transparent stroke-black" style="-webkit-text-stroke: 1.5px black;">Kapazitäten.</span>
    </h2>

    <div class="grid md:grid-cols-2 gap-20">
      <div>
        <h3 class="text-[10px] font-bold uppercase tracking-widest text-brand mb-8 italic">Digitale Infrastruktur</h3>
        <div class="border-t border-slate-100">
          {systems.map(sys => (
            <div class="flex justify-between py-6 border-b border-slate-100 items-center">
              <span class="text-sm font-bold uppercase tracking-tight">{sys.name}</span>
              <span class={`text-[10px] font-black uppercase ${sys.color}`}>{sys.status}</span>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-[10px] font-bold uppercase tracking-widest text-brand mb-8 italic">Service Auslastung</h3>
        <div class="border-t border-slate-100">
          {serviceCapacity.map(cap => (
            <div class="py-6 border-b border-slate-100">
              <div class="flex justify-between mb-2">
                <span class="text-sm font-bold uppercase tracking-tight">{cap.name}</span>
                <span class="text-[10px] font-black uppercase text-slate-400">{cap.load}</span>
              </div>
              <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest italic">{cap.availability}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <div class="mt-20 pt-8 border-t border-slate-100">
        <p class="text-[9px] font-bold uppercase text-slate-400">Zuletzt aktualisiert: {new Date().toLocaleDateString('de-DE')} — 08:00 CET</p>
    </div>
  </section>
</Layout>