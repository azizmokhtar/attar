---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Impressum">
  <section class="pt-40 pb-32 px-8 md:px-24 max-w-4xl">
    <h1 class="text-6xl font-black uppercase mb-16 italic">Impressum</h1>
    
    <div class="space-y-12 text-sm font-bold uppercase tracking-tight text-slate-600">
      <section>
        <h2 class="text-brand mb-2 text-[10px] tracking-widest">Angaben gemäß § 5 TMG</h2>
        <p class="text-black text-xl font-black">Attar Dienstleistungen</p>
        <p>Musterstraße 123<br />60311 Frankfurt am Main</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[10px] tracking-widest">Vertreten durch</h2>
        <p class="text-black">Aziz Attar</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[10px] tracking-widest">Kontakt</h2>
        <p>Telefon: +49 (0) 69 123 456 7</p>
        <p>E-Mail: info@attar-service.de</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[10px] tracking-widest">Umsatzsteuer-ID</h2>
        <p>Umsatzsteuer-Identifikationsnummer gemäß § 27 a Umsatzsteuergesetz:<br />DE123456789</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[10px] tracking-widest">Redaktionell verantwortlich</h2>
        <p>Aziz Attar<br />Musterstraße 123<br />60311 Frankfurt am Main</p>
      </section>
    </div>
  </section>
</Layout>