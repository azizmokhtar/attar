---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Impressum">
  <section class="pt-24 md:pt-40 pb-32 px-6 md:px-24 max-w-4xl">
    <h1 class="text-4xl md:text-6xl font-black uppercase mb-10 md:mb-16 italic leading-none">Impressum</h1>
    
    <div class="space-y-10 md:space-y-12 text-xs md:text-sm font-bold uppercase tracking-tight text-slate-600">
      <section>
        <h2 class="text-brand mb-2 text-[9px] md:text-[10px] tracking-widest">Angaben gemäß § 5 TMG</h2>
        <p class="text-black text-lg md:text-xl font-black">Attar Dienstleistungen</p>
        <p class="leading-relaxed">Musterstraße 123<br />60311 Frankfurt am Main</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[9px] md:text-[10px] tracking-widest">Vertreten durch</h2>
        <p class="text-black">Aziz Attar</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[9px] md:text-[10px] tracking-widest">Kontakt</h2>
        <p>Telefon: +49 (0) 69 123 456 7</p>
        <p class="break-all">E-Mail: info@attar-service.de</p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[9px] md:text-[10px] tracking-widest">Umsatzsteuer-ID</h2>
        <p class="leading-relaxed">Umsatzsteuer-Identifikationsnummer gemäß § 27 a UStG:<br /><span class="text-black">DE123456789</span></p>
      </section>

      <section>
        <h2 class="text-brand mb-2 text-[9px] md:text-[10px] tracking-widest">Redaktionell verantwortlich</h2>
        <p class="leading-relaxed">Aziz Attar<br />Musterstraße 123<br />60311 Frankfurt am Main</p>
      </section>
    </div>
  </section>
</Layout>